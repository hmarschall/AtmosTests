FoamFile {
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      add2dMountainDict;
}

mountainType ScharCos;
coordSys SLEVE;

// top of coordinate system (at or below domain height)
zt 25e3;
// horizontal scale of large scale mountains
a 25e3;
// mountain height
hm 3000;
// horizontal scale for fine scale mountains (for Schar test case)
lambda 8e3;

SLEVE_scaleCoarse 15e3;                                                         
SLEVE_scaleFine 2.5e3;
SLEVE_exponent 1;

